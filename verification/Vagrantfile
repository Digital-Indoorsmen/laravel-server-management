Vagrant.configure("2") do |config|
  config.vm.provider "virtualbox" do |v|
    v.memory = 2048
    v.cpus = 2
  end

  # Test AlmaLinux 9
  config.vm.define "almalinux9" do |alma9|
    alma9.vm.box = "almalinux/9"
    alma9.vm.network "private_network", ip: "192.168.56.10"
    alma9.vm.hostname = "test-alma9.local"
  end

  # Test Rocky Linux 9
  config.vm.define "rocky9" do |rocky9|
    rocky9.vm.box = "rockylinux/9"
    rocky9.vm.network "private_network", ip: "192.168.56.11"
    rocky9.vm.hostname = "test-rocky9.local"
  end

  # Optional: Provisioning script if you want to run it automatically
  # config.vm.provision "shell", inline: <<-SHELL
  #   # Replace with your local panel TOKEN logic
  #   # curl -sSL http://192.168.56.1/setup/TOKEN | sudo bash
  # SHELL
end
